<!DOCTYPE html>
<html>
<head>
  <title>Onepx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="user">
		<%- if identity_signed_in? %>
			<span>Hola! <%= current_identity.email %></span>
			<%= link_to 'Cerrar sesion', log_out_path, method: :delete %>
		<% else %>
			<%= link_to 'Iniciar sesion', log_in_path %>
			<%= link_to 'Crear cuenta', sign_up_path %>
		<% end %>
	</div>
	<div id="flash">
		<% flash.each do |key, value| %>
			<div id="flash-<%= key %>"><%= value %></div>
		<% end %>
	</div>
	<%= yield %>

</body>
</html>
